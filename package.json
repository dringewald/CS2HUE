{
  "name": "cs2hue",
  "version": "1.0.3",
  "description": "Control Hue and Yeelight Lights with CS2",
  "main": "main.js",
  "author": {
    "name": "dringewald",
    "email": "dringewald@nox-gaming.de"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/dringewald/CS2HUE.git"
  },
  "homepage": "https://github.com/dringewald/CS2HUE#readme",
  "bugs": {
    "url": "https://github.com/dringewald/CS2HUE/issues"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "de.dringewald.cs2hue",
    "files": [
      "**/*",
      "!gamestate.txt",
      "!examplePOST.json",
      "!previousState.json",
      "!logs/**/*",
      "!node_modules/*/.bin",
      "!node_modules/.cache/**/*",
      "config.json",
      "colors.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "build/icons/512x512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "cs2hue": "file:",
    "discord-rpc": "^4.0.1"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  }
}
